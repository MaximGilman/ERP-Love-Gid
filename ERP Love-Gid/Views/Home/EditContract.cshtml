
@{
    ViewBag.Title = "Добавление контракта";
    if (ViewBag.Admin==true) { Layout = "~/Views/Shared/_LayoutAdmin.cshtml"; }
}
<script type="text/javascript" src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
<h2>Изменение контракта</h2>
@ViewBag.Error
<div class="container">
    <header>

        <nav class="secondary_header" id="menu">
            <section>


                @using (Html.BeginForm("EditContract", "Home", FormMethod.Post))
                {
                    <input type="hidden" value="@ViewBag.ID" name="Id_Cont"/>


                    <p>@Html.ActionLink("Обратно к списку", "Index")</p>
                    <table>




                        <tr>
                            <td>
                                <p>
                                    Сумма договора:
                                </p>
                            </td>

                            <td><p> @Html.TextBox("Cost", null, new { @class = "form-control", type = "number", @min = "0" })</p></td>
                        </tr>
                        <tr>
                            <td><p>Тип работы:</p></td>

                            <td><p> @Html.DropDownList("Event", (IEnumerable<SelectListItem>)ViewData["Events"], null, new { style = "width : 200px", @class = "form-control" }) @Html.ValidationMessage("Events")</p></td>
                        </tr>


                        <tr>
                            <td><p>Фио Клиента или название организации: </p></td>
                            <td><p> @Html.TextBox("Client", null, new { @class = "form-control" })</p></td>
                        </tr>
                        <tr>
                            <td><p>Дата заключения договора: </p></td>
                            <td>
                                <p>
                                    <input type="date" id="DATE " name="calendarContract" class="form-control" value=@ViewBag.DateOfSign>
                                </p>
                            </td>

                        </tr>
                        <tr>
                            <td><p>Дата мероприятия: </p></td>
                            <td>
                                <p>
                                    <input type="date" name="calendarEvent" class="form-control" value=@ViewBag.DateOfEvent>
                                </p>
                            </td>
                        </tr>
                        <tr>

                            <td><p>1 платеж: </p><p>Дата / сумма</p></td>
                            <td>
                                <p>
                                    <input type="date" name="1pay" class="form-control" value=@ViewBag.DateOfPay1>
                                </p>
                                <p> @Html.TextBox("paySum1", null, new { @class = "form-control", type = "number", @min = "0" })</p>
                            </td>
                        </tr>
                        <tr>

                            <td><p>2 платеж: </p><p>Дата / сумма</p></td>
                            <td>
                                <p>
                                    <input type="date" name="2pay" class="form-control" value=@ViewBag.DateOfPay2>
                                </p>
                                <p> @Html.TextBox("paySum2", null, new { @class = "form-control", type = "number", @min = "0" })</p>

                            </td>
                        </tr>
                        <tr>
                            <td><p>3 платеж: </p><p>Дата / сумма</p></td>
                            <td>
                                <p>
                                    <input type="date" name="3pay" class="form-control" value=@ViewBag.DateOfPay3>
                                </p>
                                <p> @Html.TextBox("paySum3", null, new { @class = "form-control", type = "number", @min = "0" })</p>

                            </td>
                        </tr>

                        <tr>
                            <td>
                                <p>
                                    Комментарий:
                                </p>
                            </td>

                            <td><p> @Html.TextBox("Comment", null, new { @class = "form-control" })</p></td>
                        </tr>
                    </table>
                    <p></p>
                    <p><input type="submit" value="Сохранить" /></p>
                }








            </section>
        </nav>
    </header>


</div>
 