
@{
    ViewBag.Title = "Изменение платежа от колллег";
}

<h2>Изменение платежа от коллег</h2>

<div class="container">
    <header>


        <nav class="secondary_header" id="menu">
            <section>


                @using (Html.BeginForm("EditPayFromPeer", "Home", FormMethod.Post))
                {
                    <input hidden value="@ViewBag.CurUserId" name="CurUserId" />
                    <input hidden value="@ViewBag.adminId" name="adminId" />


                    <p>@Html.ActionLink("Обратно к списку", "MyFinanses")</p>
                    <table>




                        <tr>
                            <td>
                                <p>
                                    Размер платежа:
                                </p>
                            </td>

                            <td><p> @Html.TextBox("Sum", null, new { @class = "form-control", type = "number", @min = "0" })</p></td>
                        </tr>
                        <tr>
                            <td><p>От кого деньги:</p></td>
                            <td><p> @Html.DropDownList("Employee", (IEnumerable<SelectListItem>)ViewData["Employees"], null, new { style = "width : 200px", @class = "form-control" }) @Html.ValidationMessage("Employee")</p></td>

                        </tr>


                        <tr>
                            <td><p>Проект (Договор): </p></td>
                            <td><p> @Html.DropDownList("Contract", (IEnumerable<SelectListItem>)ViewData["Contracts"], null, new { style = "width : 200px", @class = "form-control" }) @Html.ValidationMessage("Contracts")</p></td>
                        </tr>
                        <tr>
                            <td><p>Тип работы: </p></td>
                            <td><p> @Html.DropDownList("Event", (IEnumerable<SelectListItem>)ViewData["Events"], null, new { style = "width : 200px", @class = "form-control" }) @Html.ValidationMessage("Events")</p></td>


                        </tr>

                        <tr>
                            <td>
                                <p>
                                    Комментарий к платежу:
                                </p>
                            </td>
                            <td><p> @Html.TextBox("Comment", null, new { @class = "form-control" })</p></td>
                        </tr>

                        <tr>
                            <td>
                                <p>
                                    На дату:
                                </p>
                            </td>
                            <td>
                                <p>
                                    <input type="date" name="calendarPay" class="form-control" value=@ViewBag.Date>
                                </p>
                            </td>
                        </tr>


                    </table>

                    <p><input type="submit" value="Сохранить" /></p>
                }








            </section>
        </nav>
    </header>


</div>

